{
  "name": "basic-apollo-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm start",
    "compile-server": "cd server/ && tsc -w",
    "test-client": "cd client && npm test",
    "postinstall": "cd client && npm install",
    "build": "cd client && npm run build",
    "server:dev": "ts-node-dev --respawn --transpile-only server/server.ts",
    "dev": "concurrently --kill-others-on-fail \"npm run server:dev\" \"npm run client\"",
    "server": "tsc && node server/dist/server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-datasource": "^0.9.0",
    "apollo-datasource-rest": "^0.14.0",
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.25.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "lodash-id": "^0.14.1",
    "lowdb": "^1.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/concurrently": "^6.2.0",
    "@types/express": "^4.17.12",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.170",
    "@types/lowdb": "^1.0.10",
    "@types/uuid": "^8.3.1",
    "concurrently": "^6.2.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.2"
  }
}
